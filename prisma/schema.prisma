generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Token {
  id                  String   @id @default(uuid())
  user_id             String
  access_token        String
  refreshToken        String
  access_token_expiry DateTime
  refreshTokenExpiry  DateTime
  created_at          DateTime @default(now())

  @@map("tokens")
}
